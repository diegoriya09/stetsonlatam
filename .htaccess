# Asegura que los archivos PHP funcionen correctamente
AddHandler application/x-httpd-php .php

# Evita errores 405 al enviar formularios
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
</IfModule>

# Evita mostrar errores en producci√≥n (puedes activarlos en desarrollo)
php_flag display_errors Off
